<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CharMapPlus.Views.Controls.GlyphExplorer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CharMapPlus.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CharMapPlus.ViewModels"
    xmlns:cv="using:CharMapPlus.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="FontItemTemplate" x:DataType="vm:CharViewModel">
            <ToggleButton Width="72"
                          Background="Transparent"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          Tag="{x:Bind Utf8Code}"
                          IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                          Unchecked="ToggleButton_Unchecked"
                          DoubleTapped="ToggleButton_DoubleTapped">

                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Character}"
                               FontFamily="{x:Bind FontName}"
                               FontSize="40"
                               LineHeight="40"
                               Padding="0,10,0,0"
                               LineStackingStrategy="BlockLineHeight"
                               HorizontalAlignment="Center" />
                    
                    <TextBlock Text="{x:Bind Utf8Code}"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                </StackPanel>

            </ToggleButton>
        </DataTemplate>
    </UserControl.Resources>

    <Border BorderThickness="1,1,0,1"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}">
        <Grid>
            <ScrollViewer x:Name="GlyphsListView"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="{x:Bind
                              cv:VisibilityConverter.ToInvertedVisibility(ViewModel.IsLoadingGlyphs),
                              Mode=OneWay}"
                          Padding="12">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Glyphs, Mode=OneWay}"
                               ItemTemplate="{StaticResource FontItemTemplate}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout MinColumnSpacing="8"
                                           MinRowSpacing="8"
                                           ItemsJustification="Start"
                                           Orientation="Horizontal" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>

            <ProgressRing x:Name="LoadingProgressRing"
                          Grid.RowSpan="2"
                          Width="50"
                          Height="50"
                          Visibility="{x:Bind
                              cv:VisibilityConverter.ToVisibility(ViewModel.IsLoadingGlyphs), Mode=OneWay}"
                          IsActive="{x:Bind ViewModel.IsLoadingGlyphs, Mode=OneWay}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
