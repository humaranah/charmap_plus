<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CharMapPlus.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CharMapPlus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CharMapPlus.ViewModels"
    xmlns:cv="using:CharMapPlus.Converters"
    mc:Ignorable="d"
    Title="CharMapPlus">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="1"
                  MaxWidth="400"
                  Margin="12,6"
                  ItemsSource="{x:Bind ViewModel.Fonts, Mode=OneWay}"
                  SelectedItem="{x:Bind ViewModel.SelectedFont, Mode=TwoWay}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center" />

        <ScrollViewer Grid.RowSpan="3"
                      HorizontalScrollBarVisibility="Disabled">

            <ListView ItemsSource="{x:Bind ViewModel.Fonts, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedFont, Mode=TwoWay}" />

        </ScrollViewer>

        <ScrollViewer x:Name="GlyphScrollViewer"
                      Grid.Row="1"
                      Grid.Column="1"
                      BorderThickness="1,1,0,0"
                      BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                      Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="12">

            <ItemsRepeater x:Name="GlyphItemsRepeater"
                           ItemsSource="{x:Bind ViewModel.Characters, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout MinColumnSpacing="8"
                                       MinRowSpacing="8"
                                       ItemsJustification="Start"
                                       Orientation="Horizontal" />
                </ItemsRepeater.Layout>

                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="vm:CharViewModel">
                        <Border Width="72"
                                Tag="{x:Bind}"
                                BorderThickness="1"
                                Background="Transparent"
                                BorderBrush="{x:Bind cv:SelectionBrushConverter.Convert(IsSelected), Mode=OneWay}"
                                Tapped="Border_Tapped">
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="{x:Bind Character}"
                                           FontFamily="{x:Bind cv:FontFamilyConverter.ConvertFrom(FontName)}"
                                           FontSize="40"
                                           LineHeight="40"
                                           Padding="0,15,0,0"
                                           LineStackingStrategy="BlockLineHeight"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{x:Bind Utf8Code}"
                                           FontSize="12"
                                           Padding="0,5"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

        </ScrollViewer>

    </Grid>
</Window>
